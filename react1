import { useState } from 'react';

function App() {
  
  const [words, setWords] = useState([]);
 
  const [eng, setEng] = useState('');
  const [kor, setKor] = useState('');

  // ë‹¨ì–´ ì¶”ê°€ ë²„íŠ¼ í´ë¦­ ì‹œ ì‹¤í–‰
  const addWord = () => {
    if (eng.trim() === '' || kor.trim() === '') return;

    const newWord = {
      eng,
      kor, 
    };

    setWords([...words, newWord]);
    setEng('');
    setKor('');
  };

  return (
    <div style={{ padding: '20px' }}>
      <h1>ğŸ“š ë‚˜ë§Œì˜ ë‹¨ì–´ì¥</h1>

      {/* ì…ë ¥ í¼ */}
      <input
        placeholder="ì˜ì–´"
        value={eng}
        onChange={(e) => setEng(e.target.value)}
      />
      <input
        placeholder="ëœ»"
        value={kor}
        onChange={(e) => setKor(e.target.value)}
      />
      <button onClick={addWord}>ì¶”ê°€í•˜ê¸°</button>

      <hr />

      {/* ë‹¨ì–´ ëª©ë¡ */}
      <h2>ğŸ“ ë‹¨ì–´ ëª©ë¡:</h2>
      <ul>
        {words.map((word) => (
          <li key={word.id}>
            {word.eng}
            {' - '}
            {word.showMeaning ? word.kor : 'ëœ» ë³´ê¸°'}
          </li>
        ))}
      </ul>
    </div>
  );
}

export default App;
